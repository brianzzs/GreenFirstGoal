@model GreenFirstGoal.Models.SelectViewModel
@{
    ViewData["Title"] = "First Goal GT League";
    var styleScore1 = "";
    var styleScore2 = "";
}
<h1>@ViewData["Title"]</h1>

<section class="bg-gray-800 py-8">
    <div class="container mx-auto flex flex-wrap pt-4 pb-12">
        <h2 class="w-full my-4 text-5xl font-bold leading-tight text-center">
            GT League 
        </h2>
        <div class="w-full md:w-1/3 p-6 flex flex-col flex-grow flex-shrink">
            <div class="flex-auto rounded-t rounded-b-none overflow-hidden shadow">
                <div class="border border-gray-500 rounded-lg p-2 bg-gray-700 text-gray-50">
                    <form asp-asp-controller="FirstGoalGTLeague" asp-action="FirstGoalGTLeague" method="post">
                        <div class="p-5">
                            <label class="block mb-2 text-lg text-center font-medium dark:text-white" for="firstGoalPlayer">Escolha o Jogador Casa</label>
                            <select id="Select-Player1" placeholder="Escolha" data-live-search="true" class="block w-full p-2 mb-4 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" asp-items="Model.PlayersList" asp-for="Player" onchange="makeGetRequest()">
                                <option value="">Escolha</option>
                            </select>
                            <label class="block mb-2 text-lg text-center font-medium dark:text-white" for="firstGoalPlayer">Escolha o Jogador Visitante</label>
                            <select id="Select-Player2" placeholder="Escolha" class="block w-full p-2 mb-4 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" asp-items="Model.PlayersList" asp-for="Player2" data-live-search="true">
                                <option value="">Escolha</option>
                            </select>
                            @*<select id="player2" class="selectpicker" asp-items="Model.PlayersList" asp-for="Player2" data-live-search="true"></select>*@

                            <div class="flex">
                                <button type="submit" class="mx-auto mb-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 hover:underline text-white font-bold rounded-full mt-4 lg:mt-0 py-4 px-8 shadow opacity-75 focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">Buscar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $('#Select-Player1').selectize();
</script>
<script>
    $('#Select-Player2').selectize();
</script>







